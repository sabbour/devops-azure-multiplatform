<?xml version='1.0' encoding='UTF-8'?>
<flow-definition plugin="workflow-job@2.11.2">
  <actions/>
  <description>{insert-job-description}</description>
  <displayName>{insert-job-display-name}</displayName>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>jdk</name>
          <description></description>
          <defaultValue>{insert-jdk}</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>maven</name>
          <description></description>
          <defaultValue>{insert-maven}</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>img_name</name>
          <description></description>
          <defaultValue>{insert-docker-dockerimage}</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>acr</name>
          <description></description>
          <defaultValue>{insert-container-registry}</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>registry_credentials_id</name>
          <description></description>
          <defaultValue>{insert-docker-credentials}</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>git_repo</name>
          <description></description>
          <defaultValue>{insert-git-url}</defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>git_branch</name>
          <description></description>
          <defaultValue>{insert-git-branch}</defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
    <org.jenkinsci.plugins.workflow.job.properties.PipelineTriggersJobProperty>
      <triggers/>
    </org.jenkinsci.plugins.workflow.job.properties.PipelineTriggersJobProperty>
  </properties>
  <definition class="org.jenkinsci.plugins.workflow.cps.CpsFlowDefinition" plugin="workflow-cps@2.39">
    <script>node {
    jdk = tool name: params.jdk
    env.JAVA_HOME = &quot;${jdk}&quot;

    echo &quot;jdk installation path is: ${jdk}&quot;

    withMaven(
        maven: params.maven
        ){

        def built_img = &apos;&apos;

        stage(&apos;Checkout git repo&apos;) {
          git branch: params.git_branch, url: params.git_repo
        }
        stage(&apos;Maven build&apos;) {
            sh &apos;mvn clean package&apos;
        }
        stage(&apos;Build Docker image&apos;) {
            dir(&apos;target&apos;){
                built_img = docker.build(params.acr + &quot;/&quot; + params.img_name, &apos;.&apos;)
            }
        }

        stage(&apos;Push Docker image to Azure Container Registry&apos;) {
            docker.withRegistry(&quot;https://&quot; + params.acr, params.registry_credentials_id ) {
            built_img.push(&quot;${env.BUILD_NUMBER}&quot;)
            built_img.push(&quot;latest&quot;)
          }
        }
    }
}

</script>
    <sandbox>true</sandbox>
  </definition>
  <triggers/>
  <disabled>false</disabled>
</flow-definition>